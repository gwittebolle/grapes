

  <div class="my-wine-card shadow p-0 d-flex flex-column flex-sm-row">
    <div class="mb-3 mb-md-0 text-center p-md-0 pt-3 w-100 wine-cover">
      <%= wine.photo.attached? ? cl_image_tag(wine.photo.key,  :crop => "fill") : image_tag('wine.png', width: 250, height: 250) %>
    </div>
    <div class="card-body p-3 m-3 d-flex flex-column justify-content-between">
      <div>
        <h4 class="mb-0"><strong><%= wine.name %></strong></h4>
        <% if wine.stock_quantity == 1 %>
          <p class="mb-1"><%= wine.stock_quantity %> bouteille en stock</i></p>
        <% else %>
          <p class="mb-1"><%= wine.stock_quantity %> bouteilles en stock</i></p>
        <% end %>
        <p class="card-title price mb-2"><strong>Prix unitaire : <%= number_with_precision(wine.price, precision: 2) %> â‚¬</strong></p>

      </div>
        <div class="d-flex justify-content-around border-top pt-3 ">
          <%= link_to '', wine_path(wine), class: "mt-1 fa-solid fa-eye" %>
          <%= link_to '', edit_wine_path(wine), class: "mt-1 fa-solid fa-pen-nib" %>
          <%= link_to '', wine_path(wine), class: "mt-1 fa-solid fa-trash",  data: { turbo_method: :delete, turbo_confirm: "Voulez-vous vraiment retirer ce #{wine.name} de votre cave?"} %>
        </div>

    </div>
  </div>
