<div class="container shadow-sm mt-4 bg-light">

<h3>Mes annonces</h3>
<% current_user.wines.each do |wine| %>
  <ul>
    <% @keys.each do |key| %>
      <% unless wine[key].blank? %>
        <li><%= wine[key] %></li>
      <% end %>
    <% end  %>
    <li><button type="button" class="btn btn-dark"><%= link_to "Delete this wine", wine_path(wine), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{wine.name} from your wine list?"} %></button></li>
  </ul>
<% end %>
<div class="py-3">
<%= link_to "Ajouter une offre", new_wine_path, class:"btn btn-dark" %>
</div>
