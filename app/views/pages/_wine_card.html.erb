<div class="" data-search-target="card">

   <div class="wine-pic text-center">
    <%= link_to wine_path(wine) do %>
      <%= wine.photo.attached? ? cl_image_tag(wine.photo.key, :width => 200, :height => 300, :crop => "fill") : image_tag('wine.png', width: 200, height: 300) %>
    <% end %>
  </div>

  <div class="d-flex flex-column justify-content-center align-items-center">
    <h4><%= wine.name %></h4>
    <h6> - <%= number_with_precision(wine.price, precision: 2) %> â‚¬ - </h6>

    <div class="btn">
           <% if wine.user == current_user %>
            <%= link_to profile_path, class: " btn-trans mt-2" do %>
              <h4><span class=""> Voir mon annonce</span></h4>
            <% end %>
          <% else %>
            <%= link_to wine_path(wine), class: "btn-trans mt-2" do %>
            <h4><span> En savoir plus</span></h4>
            <% end %>

          <% end %>
    </div>
  </div>

</div>
