<a href="<%= wine_path(wine) %>">
  <div class="wine-card shadow-sm p-0 m-3 d-flex flex-column flex-md-row" data-search-target="card">
    <div class="mb-3 mb-md-0 text-center p-md-0 pt-3">
      <%= wine.photo.attached? ? cl_image_tag(wine.photo.key, :width => 300, :height => 250, :crop => "fill") : image_tag('wine.png', width: 300, height: 250) %>
    </div>
    <div class="card-body p-3 m-3 d-flex flex-column justify-content-between">
      <div>
        <h4 class="mb-0"><strong><%= wine.name %></strong></h4>
        <p class="mb-1"><i>Vendu par <%= wine.user.username %></i></p>
      </div>
      <div class="d-flex flex-column flex-md-row justify-content-between mt-3 border-top pt-3">
        <p class="card-title price mb-2"><strong><%= wine.price.to_i %> â‚¬</strong></p>
        <% if wine.user == current_user %>
          <%= link_to profile_path, class: "btn btn-info-secondary mt-2" do %>
            <span>Voir mon annonce</span>
          <% end %>
        <% else %>
          <%= link_to wine_path(wine), class: "btn btn-info mt-2" do %>
            <span>En savoir plus</span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</a>
