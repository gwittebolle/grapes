<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Acheter ce vin</h3>
        <%= simple_form_for [@user, @booking] do |f| %>
          <%= f.input :status, placeholder: 'Enter a status' %>
          <%= f.association :wine, prompt: "Select a wine" %>
          <%= f.submit class: "btn btn-flat" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
